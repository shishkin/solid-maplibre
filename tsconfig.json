{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["src", ".eslintrc.cjs", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
